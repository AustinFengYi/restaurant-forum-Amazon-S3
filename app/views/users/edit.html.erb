
<div class="container">
<%= form_for @user do |f| %>
  <h3>Edit Profile</h3>
  <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name ,class:"form-control"%>
  </div>

  <div class="form-group">
      <%= f.label :intro, "自我介紹" %>
      <%= f.text_area :intro,class:"form-control" %>
  </div>

<div class="form-group">
      <%= f.label :image, "Profile Photo" %>
      <%= image_tag @user.image , width:'300px' if@user.image? %>
      <%= f.file_field :image %>

 </div>


      <%= f.submit "Update",class:"btn btn-primary"  %>
      <%=link_to "Cancel",user_path(@user),class:"btn btn-default" %> 
<% end %>
</div>